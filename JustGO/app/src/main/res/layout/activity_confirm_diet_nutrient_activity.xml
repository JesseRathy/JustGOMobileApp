<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.diet_usage.ConfirmDietNutrient">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_height="380dp"
            android:id="@+id/result_diet_from_database"
            android:textColor="@color/rice"
            android:textSize="25dp"
            android:background="@color/background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/result_diet_from_database"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="14dp"
                android:text="Please enter the amount of food you want to input, each unit is 100g"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/input_text_1_dark"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/white"
                android:id="@+id/submit_diet_amount"
                />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comfirm_item"
            android:id="@+id/submit_diet_change"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reselect_item"
            android:id="@+id/go_back_diet_select"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
