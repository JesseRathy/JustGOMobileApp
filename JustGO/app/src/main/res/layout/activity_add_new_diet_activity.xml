<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.food_usage.add_new_food_activity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name_of_food"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="name of your food"
                android:id="@+id/new_food_name"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/calorie_intake_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in KJ"
                android:id="@+id/new_food_calories"
                />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/fat_intake_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat"
                android:textSize="30dp"
                android:layout_marginRight="67dp"
                />
        </LinearLayout>
        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in gram"
                android:id="@+id/new_food_fat"
                />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/protein_intake"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="67dp"
                android:text="Protein"
                android:textSize="30dp" />
        </LinearLayout>

            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in gram"
                android:id="@+id/new_food_protein"
                />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/cholesterol_intake_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cholesterol"
                android:textSize="30dp"
                android:layout_marginRight="67dp"
                />
        </LinearLayout>

        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in gram"
                android:id="@+id/new_food_cholesterol"
                />

        <Button
            android:id="@+id/submit_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit to our database"
            />
        </LinearLayout>


</android.support.constraint.ConstraintLayout>
