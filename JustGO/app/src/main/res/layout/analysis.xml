<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.Analysis">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/background"
        >

        <!-- Gender Box -->
        <TextView
            android:id="@+id/analysisGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender Box"
            android:textColor="@color/white"
            />

        
        <!-- Age Box -->
        <TextView
            android:id="@+id/analysisAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age Box"
            android:textColor="@color/white"
            />

        <!-- Height Box -->
        <TextView
            android:id="@+id/analysisHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height Box"
            android:textColor="@color/white"
            />

        <!-- Weight Box -->
        <TextView
            android:id="@+id/analysisWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Box"
            android:textColor="@color/white"
            />

        <!-- BMI Box -->
        <TextView
            android:id="@+id/analysisBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Box"
            android:textColor="@color/white"
            />

        <!-- BMI Box -->
        <TextView
            android:id="@+id/analysisHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Box"
            android:textColor="@color/white"
            />

        <!-- Calorie Box -->
        <TextView
            android:id="@+id/analysisCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorie Box"
            android:textColor="@color/white"
            />

        <!-- Protein Box -->
        <TextView
            android:id="@+id/analysisProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="proteinBox"
            android:textColor="@color/white"
            />

        <!-- Cholesterol Box -->
        <TextView
            android:id="@+id/analysisCholesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cholesterol Box"
            android:textColor="@color/white"
            />

        <!-- Weight Graph -->
        <com.jjoe64.graphview.GraphView
            android:layout_width="368dp"
            android:layout_height="200dp"
            app:seriesTitle="Foobar"
            android:id="@+id/graph"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
