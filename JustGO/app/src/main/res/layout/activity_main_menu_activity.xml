<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.main_menu_activity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:id="@+id/go_add_diet"
            android:text="add Today`s diet"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/go_add_diet"
            android:id="@+id/go_body_analysis"
            android:text="add body Info"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/go_body_analysis"
            android:id="@+id/go_add_exercise"
            android:text="add Today`s exercise"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/go_add_exercise"
            android:id="@+id/go_nutrition_suggestion"
            android:text="get nutrition analysis"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/go_nutrition_suggestion"
            android:id="@+id/go_exercies_recommendation"
            android:text="get exercise recommendation"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/go_exercies_recommendation"
            android:id="@+id/go_share_experience"
            android:text="share your experience" />
        <Button
            android:id="@+id/btn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SimpleAdapter ExpandableListView"
            android:textAllCaps="false"
            android:layout_below="@+id/btn_normal"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One ExpandableListView"
            android:textAllCaps="false"
            android:layout_below="@+id/btn_indicator"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalized ExpandableListView"
            android:textAllCaps="false"
            android:layout_below="@+id/go_share_experience"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

