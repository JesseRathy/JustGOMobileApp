<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.main_menu_activity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/go_add_diet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="food activity system" />

        <Button
            android:id="@+id/diet_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diet management system"
            android:layout_below="@+id/go_exercies_recommendation"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/go_body_analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_add_diet"
            android:layout_centerHorizontal="true"
            android:text="add body Info" />

        <Button
            android:id="@+id/go_add_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_body_analysis"
            android:layout_centerHorizontal="true"
            android:text="exercise management system" />

        <Button
            android:id="@+id/go_nutrition_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_add_exercise"
            android:layout_centerHorizontal="true"
            android:text="get nutrition analysis" />

        <Button
            android:id="@+id/go_exercies_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_nutrition_suggestion"
            android:layout_centerHorizontal="true"
            android:text="get exercise recommendation" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

