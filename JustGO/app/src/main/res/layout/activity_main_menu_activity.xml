<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.main_menu_activity">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="569dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >
        <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        app:srcCompat="@drawable/justgo_icon2"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="1000dp"
            android:background="@color/background"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginTop="67dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <Button
                android:id="@+id/go_add_diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/food_icon_main"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@+id/diet_management"
                android:layout_alignStart="@+id/main_weight" />

            <Button
                android:id="@+id/go_body_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_icon_main"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="-5dp"
                android:layout_alignTop="@+id/go_nutrition_suggestion"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/main_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weight_icon_main"
                android:elevation="0dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/go_add_diet"
                android:layout_toStartOf="@+id/diet_management" />

            <Button
                android:id="@+id/diet_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/diet_icon_main"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/go_body_analysis" />

            <Button
                android:id="@+id/go_add_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exercise_icon_main"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/go_body_analysis"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/go_nutrition_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/analysis_icon_main"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/go_exercies_recommendation"
                android:layout_alignStart="@+id/go_add_diet" />

            <Button
                android:id="@+id/go_exercies_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recomm_icon_main"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>

